{
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "formatWithErrors": false,
    "ignore": [ "dist", "coverage" ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error",
        "noUselessFragments": "error",
        "noUndeclaredVariables": "error"
      },
      "complexity": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true
      },
      "nursery": {
        "recommended": true,
        "noBannedTypes": "error",
        "noExplicitAny": "error",
        "noConditionalAssignment": "error"
      }
    },
    "ignore": [ "dist", "coverage" ]
  }
}